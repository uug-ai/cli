{
    "name": "go:1.24-bookworm",
    "runArgs": [
        "--name=uugai-cli-dev",
        "--network=host"
    ],
    "dockerFile": "Dockerfile",
    "mounts": [
		"source=${localWorkspaceFolder}/../models,target=/workspaces/models,type=bind"
	],
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "GitHub.copilot",
                "ms-azuretools.vscode-docker",
                "mongodb.mongodb-vscode"
            ]
        }
    },
    "postCreateCommand": "go mod tidy"
}